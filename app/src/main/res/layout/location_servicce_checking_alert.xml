<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@color/transparent"
    tools:context=".ui.personalemergencycontacts.EditContactDialog">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_white_1000"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/blue_location_icon_png_19" />

            <com.basu.CustomView.TextViewSourceSansProRegular
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/iv_location"
                android:textSize="@dimen/_16sdp"
                android:text="To continue, let your device device turn on location using location service." />

            <com.basu.CustomView.OpenSansSemiBoldTextView
                android:id="@+id/tv_deny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_toStartOf="@+id/tv_allow"
                android:text="DENY"
                android:textColor="@color/light_blue_700" />

            <com.basu.CustomView.OpenSansSemiBoldTextView
                android:id="@+id/tv_allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="ALLOW"
                android:textColor="@color/light_blue_700" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>