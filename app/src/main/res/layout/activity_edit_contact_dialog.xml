<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ui.personalemergencycontacts.EditContactDialog">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_white_1000">


            <com.basu.CustomView.TextViewSourceSansPro
                android:id="@+id/tv_contact_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_17sdp"
                android:text="01"
                android:textColor="@color/grey_black_1000"
                android:textSize="@dimen/_20sdp" />

            <com.basu.CustomView.TextViewSourceSansProRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_contact_serial"
                android:layout_toEndOf="@+id/tv_contact_serial"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_17sdp"
                android:text="Edit Contact"
                android:textColor="@color/grey_black_1000"
                android:textSize="@dimen/_14sdp" />

            <com.basu.CustomView.EditTextSourceSansPro
                android:id="@+id/edt_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contact_serial"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:hint="@string/edt_name"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="@color/grey_black_1000"
                android:textColorHint="@color/grey_black_1000"
                android:textSize="@dimen/_15sdp" />

            <com.basu.CustomView.EditTextSourceSansPro
                android:id="@+id/edt_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_contact_name"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_toEndOf="@+id/tv_country_code"
                android:digits="0123456789"
                android:hint="@string/edt_phone_no"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="#5d5f60"
                android:textColorHint="@color/grey_black_1000"
                android:textSize="@dimen/_14sdp" />

            <com.basu.CustomView.TextViewSourceSansPro
                android:id="@+id/tv_country_code"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_contact_name"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:hint="+1"
                android:textColor="#5d5f60"
                android:textColorHint="@color/grey_black_1000"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_country_code"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@color/grey_black_1000"
                android:padding="@dimen/_15sdp">

                <com.basu.CustomView.TextViewSourceSansProRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Click to Save"
                    android:textColor="@color/grey_white_1000"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tick_icon" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>