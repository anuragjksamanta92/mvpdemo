<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_screen_bg">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_sing_up_to_activate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_black_1000"
            android:padding="@dimen/_15sdp"
            android:weightSum="2">

            <com.basu.CustomView.TextViewSourceSansProRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/TextStyle.Title.Sub"
                android:gravity="center|left"
                android:text="@string/txt_sing_up_to_activate"
                android:textColor="@color/grey_white_1000"
                android:textSize="@dimen/_12sdp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:src="@mipmap/submit_icon" />
        </LinearLayout>

        <com.basu.CustomView.TextViewSourceSansProRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextStyle.Title.Sub"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/txt_powered_by"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/grey_black_1000" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>