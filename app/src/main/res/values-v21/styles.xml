<resources>

    <!-- Base application theme. -->
    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal_600</item>
        <item name="colorControlActivated">@color/teal_600</item>
        <item name="colorControlHighlight">@color/teal_600</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/grey_900</item>
        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/teal_600</item>
        <item name="colorControlActivated">@color/teal_600</item>
    </style>
</resources>
